# 应用配置
APP_NAME=Feed Music API
APP_VERSION=1.0.0
DEBUG=False

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 数据库配置
# 本地 PostgreSQL 配置
POSTGRES_URL=postgresql://username:password@localhost:5432/feed_music_db

# 生产环境使用 Supabase PostgreSQL
# POSTGRES_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# Vercel 环境标识
VERCEL=1

# CORS配置（逗号分隔的字符串，应用会自动转换为数组）
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-frontend-domain.vercel.app

# 文件上传配置
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s